{
    "title": "Easier tab control",
    "rules": [{
        "description": "Easier tab control",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "comma",
                    "modifiers": {
                        "mandatory": [
                            "left_command"
                        ]
                    }
                },
                "to": [{
                    "key_code": "tab",
                    "modifiers": [
                        "left_control"
                    ]
                }]
            },

            {
                "type": "basic",
                "from": {
                    "key_code": "m",
                    "modifiers": {
                        "mandatory": [
                            "left_command"
                        ]
                    }
                },
                "to": [{
                    "key_code": "tab",
                    "modifiers": [
                        "left_control",
                        "left_shift"
                    ]
                }]
            },

            {
                "type": "basic",
                "from": {
                    "key_code": "comma",
                    "modifiers": {
                        "mandatory": [
                            "left_command",
                            "left_shift"
                        ]
                    }
                },
                "to": [{
                    "key_code": "page_down",
                    "modifiers": [
                        "left_control",
                        "left_shift"
                    ]
                }]
            },

            {
                "type": "basic",
                "from": {
                    "key_code": "m",
                    "modifiers": {
                        "mandatory": [
                            "left_command",
                            "left_shift"
                        ]
                    }
                },
                "to": [{
                    "key_code": "page_up",
                    "modifiers": [
                        "left_control",
                        "left_shift"
                    ]
                }]
            }
        ]
    }]
}
